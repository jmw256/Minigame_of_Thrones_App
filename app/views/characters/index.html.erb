<h1 align="center">Listing All Characters</h1>

<% @characters.each do |character| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to character.name, character_path(character) %>
        </div>
        <div class="article-body">
          <%= truncate(character.description, length: 1000) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit", edit_character_path(character), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete", character_path(character), method: :delete, 
                          data: {confirm: "Are you sure you want to delete this character?"}, 
                          class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>